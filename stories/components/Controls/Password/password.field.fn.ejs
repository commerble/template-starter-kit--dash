<%
    const {
        wrap,
        required, title,
        show, disabled, readonly, invalid
    } = locals;
    
    const when = (condition, str) => condition ? str : '';
%>
<% if (wrap) { %>
    <dl class="field <%= required||'' %>">
        <dt class="field-title"><%= title || 'Control' %></dt>
        <dd class="field-body">
            <%- include('password', { show, disabled, readonly, invalid }) %>
            <p class="field-error <%- when(invalid,'field-validation-error') %>" <%- when(!invalid,'style="display:none;"') %>><%= when(invalid,'エラーメッセージ') %></p>
        </dd>
    </dl>
<% } else { %>
    <%- include('password', { show, disabled, readonly, invalid }) %>
<% } %>

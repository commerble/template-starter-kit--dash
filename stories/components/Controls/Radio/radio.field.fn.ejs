<%
    const {
        wrap,
        required, title,
        disabled, readonly, invalid, 
        name, options
    } = locals;

    const when = (condition, str) => condition ? str : ''
%>
<% if (wrap) { %>
    <dl class="field <%= required || '' %>">
        <dt class="field-title"><%= title || 'Control' %></dt>
        <dd class="field-body">
            <%- include('radio', { 
                disabled, readonly, invalid, 
                name: name || 'example',
                options: options || [
                    { text: 'ラジオボタン１', value: '1' },
                    { text: 'ラジオボタン２', value: '2' },
                    { text: 'ラジオボタン３', value: '3' },
                ] 
            }) %>
            <p class="field-error <%- when(invalid,'field-validation-error') %>" <%- when(!invalid,'style="display:none;"') %>><%= when(invalid,'エラーメッセージ') %></p>
        </dd>
    </dl>
<% } else { %>
    <%- include('radio', { 
        disabled, readonly, invalid, 
        name: name || 'example',
        options: options || [
            { text: 'ラジオボタン１', value: '1' },
            { text: 'ラジオボタン２', value: '2' },
            { text: 'ラジオボタン３', value: '3' },
        ] 
    }) %>
<% } %>

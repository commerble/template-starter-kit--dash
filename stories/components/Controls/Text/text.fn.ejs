<%
    const {
        name, type, size, placeholder, disabled, readonly, invalid
    } = locals;

    const when = (condition, str) => condition ? str : ''
%>
<input 
    type="<%= type %>" 
    name="<%= name %>" 
    <%- when(typeof size === 'number', `size="${size}"`) %>
    placeholder="<%= placeholder || '' %>"
    <%= when(disabled, 'disabled') %> 
    <%= when(readonly, 'readonly') %> 
    <%- when(invalid, 'class="input-validation-error"') %>
>
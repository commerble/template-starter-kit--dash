<% 
    const {
        name, rows, disabled, readonly, invalid
    } = locals;

    const when = (condition, str) => condition ? str : ''
%>
<textarea 
    name="<%= name %>"
    <%- when(rows === 'number', `rows=${rows}`) %>
    <%= when(disabled, 'disabled') %> 
    <%= when(readonly, 'readonly') %> 
    <%- when(invalid, 'class="input-validation-error"') %>
></textarea>
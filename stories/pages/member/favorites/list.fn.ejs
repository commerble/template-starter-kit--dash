<%
    const {
        serverError,
        empty,
        last,
        complete
    } = locals;
%>
<%- include('gnav') %>
<main class="content-wide columns">
    <div class="col-3 col-order-2 col-order-1-sp">
        <h1 class="h-underline">お気に入り</h1>
        <% if (serverError) { %>
            <%- include('alert', { color: 'error' }) %>
        <% } %>
        <% if (complete) { %>
            <%- include('alert', { color: 'success', messages: ['お気に入りを保存しました', 'お気に入りを削除しました'] }) %>
        <% } %>
        <% if (!empty) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="2">商品</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < 5; i++ ) { %>
                        <tr>
                            <td align="center">
                                <a href="/?path=/story/pages-item--default" class="product-icon" title="商品ページ名 <%=i%>">
                                    <div class="image image-square">
                                        <img src="https://httpstat.us/404" alt="商品ページサムネ <%=i%>">
                                    </div>
                                </a>
                            </td>
                            <td align="center">
                                <a href="/?path=/story/pages-item--default" class="product-icon" title="商品ページ名 <%=i%>">
                                    商品ページ名 <%=i%><br>
                                    <%- include('price', {
                                        price: 1000,
                                        tax: 'include',
                                        yenMark: true,
                                    }) %>
                                </a>
                            </td>
                            <td align="center">
                                <a class="btn btn-primary btn-text" href="/?path=/story/pages-member-favorites--item">お気に入りから削除</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <% if (!last) { %>
                <div class="block">
                    <a href="/?path=/story/pages-member-favorites--last" class="btn btn-primary btn-text btn-next">次のページ</a>
                </div>
            <% } %>
        <% } else { %>
            <div class="message-box">
                <p class="message text-center lead">お気に入り登録された商品はまだありません。</p>
            </div>
        <% } %>
    </div>
    <div class="col-1 col-order-1 col-order-2-sp">
        <%- include('memberMenu', { active: 'fav' }) %>
    </div>
</main>

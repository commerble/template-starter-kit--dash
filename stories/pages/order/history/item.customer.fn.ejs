<%
    const {
        serverError,
    } = locals;
    const when = (condition, text) => condition ? text : '';
%>
<main class="section content">
    <h1 class="h-underline">注文編集 - お客様情報</h1>
    <% if (serverError) { %>
        <%- include('alert', { color: 'error' }) %>
    <% } %>
    <form action="@HistoryUrl(customer.Cart.OrderId)" method="post">
        <!-- @Page.Html.HttpMethodOverride("put") -->
        <dl class="field">
            <dt class="field-title">氏名（フリガナ）</dt>
            <dd class="field-body">
                <p class="field-text">山田太郎 / ヤマダタロウ</p>
            </dd>
        </dl>
        <dl class="field">
            <dt class="field-title">住所</dt>
            <dd class="field-body">
                <p class="field-text">〒1030014 都道府県市区町村町丁番号 建物名・部屋番号</p>
            </dd>
        </dl>
        <dl class="field">
            <dt class="field-title">電話番号</dt>
            <dd class="field-body">
                <p class="field-text">00000000000</p>
            </dd>
        </dl>
        <dl class="field required">
            <dt class="field-title">メールアドレス</dt>
            <dd class="field-body">
                <input 
                    type="email" 
                    name="OrderCustomer.EmailAddr" 
                    value="info@commerble.com" 
                    placeholder="例）xxxxxx@commerble.com"
                    data-val="true"
                    data-val-required="メールアドレスは必須項目です。"
                    data-val-email="メールアドレスをご入力ください。"
                >
                <p class="field-error" data-valmsg-for="OrderCustomer.EmailAddr" data-valmsg-replace="true"></p>
                <p class="field-note">ドメイン受信拒否機能を設定されている方は&nbsp;commerble.com&nbsp;からの受信許可を設定してください。 </p>
            </dd>
        </dl>
        <div class="block block-vertical">
            <!-- <button type="submit" class="btn btn-action btn-large btn-next" name="customer" value="put">メールアドレスを変更する</button> -->
            <a href="./?path=/story/pages-order-history--changed" class="btn btn-action btn-large btn-next">メールアドレスを変更する</a>
            <a href="./?path=/story/pages-order-history--item" class="btn btn-primary btn-text btn-prev">注文詳細へもどる</a>
        </div>
    </form>
</main>

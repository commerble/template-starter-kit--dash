@{
  Message.Subject = "会員登録のご完了";

  long userNo = long.Parse(ViewBag.Parameters["userNo"]);
  var user = Database.EC.Single(db => 
    db.UserProperties
      .Include("UserAccount")
      .Where(u => u.UserNo == userNo)
      .Single()
  );
}@(user.LastName) @(user.FirstName) 様
会員登録が完了しました。

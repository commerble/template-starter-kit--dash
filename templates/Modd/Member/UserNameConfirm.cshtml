@{
    var user = Page.ViewData.Model as VM.ChangeUserName;
    var viewData = Page.ViewData[BasicController.ViewMessageKey] as ViewMessages; 

    ViewBag.PageTitle = "会員情報編集 - 確認";
}
@DisplayViewMessages(viewData)

<div class="section">
    <div class="inner">
        <div class="formWrapper">
            <form action="@Page.Template.SecuredLink("ModdDefault", new {controller="Member", action="UserName"})" method="post">
                @Raw(Page.Html.ModelToObjectState("model",user))
                @Page.Html.SessionAntiForgeryToken()
                <section class="formSection">
                    <h2 id="customer" class="formSectionTitle">会員情報</h2>
                    <dl class="formBlock">
                        <dt class="formBlockTitle">メールアドレス</dt>
                        <dd class="formBlockBody">
                            <p class="inputContent">@user.UserName</p>
                        </dd>
                    </dl>
                </section>
                <div class="buttonContainer">
                    <button type="submit" class="btCallToAction btLargeSize btNext" name="update" value="post">メールアドレスを変更</button>
                </div>
                <div class="buttonContainer">
                    <a href="@Page.Url.RouteUrl("ModdDefault", new { controller="Member", action="Account" })" class="btPrimary btNormalSize btPrev">会員情報へ戻る</a>
                </div>
            </form>
        </div>
    </div>
</div>
